<% include ../partials/header %>
 

<form action="/spots" method="POST">
   <div class="container">
      <h1 style="text-align: center; margin: 25px; "> Create a new tourist spot!</h1>
      <div class="row">
            <div style="width: 30%; margin: 0 auto;">
                  <input class="form-group form-control" type="text" name="name" placeholder="Spot name">
                  <input class="form-group form-control" type="text" name="state" placeholder="State">
                  <input class="form-group form-control" type="text" name="country" placeholder="Country">
                  <input class="form-group form-control" type="text" name="image" placeholder="image url">
                  <input class="form-group form-control" type="text" name="description" placeholder="Spot decsription">
                  <button class="btn btn-block btn-primary">SUBMIT!</button>
                  <a href="/spots">Go back!</a>      
            </div>
      </div>
   </div>
</form>
 

