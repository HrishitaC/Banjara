<% include ../partials/header %>

<form action="/register" method="POST">
    <div class="container">
        <h1 style="text-align: center; margin: 25px; "> Sign Up! </h1>
        <div class="row">
            <div style="width: 30%; margin: 0 auto;">
                <input class="form-group form-control" type="text" name="username" placeholder="username">
                <input class="form-group form-control" type="password" name="password" placeholder="password">
                <hr>
                <p>Card Details:</p>
                <input class="form-group form-control" type="text" name="account[bankName]" placeholder="Bank Name">
                <input class="form-group form-control" type="text" name="account[holderName]" placeholder="Account Holder Name">
                <input class="form-group form-control" type="text" name="account[number]" placeholder="Card Number">
                <button class="btn btn-block btn-primary">Sign up</button>
            </div>
        </div>
    </div>
</form>

<% include ../partials/footer %>
