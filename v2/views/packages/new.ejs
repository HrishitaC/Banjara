<% include ../partials/header %>

<form action="/packages" method="POST">
   <div class="container">
      <h1 style="text-align: center; margin: 25px; "> Create a new package!</h1>
      <div class="row">
            <div style="width: 30%; margin: 0 auto;">
                  <input class="form-group form-control" type="text" name="name" placeholder="Package name">
                  <input class="form-group form-control" type="text" name="image" placeholder="Image URL">
                  <input class="form-group form-control" type="text" name="description" placeholder="Package decsription">
                  <p>Choose spots to be added (Hold CTRL / CMD for selecting multiple fields)</p>
                  <select name="addedSpots" class="custom-select" multiple>
                        <% spots.forEach(function(spot){ %>
                              <option value="<%= spot.id %>"><%= spot.name %></option>
                        <% }); %>                          
                  </select>
                  <% if(spots.hotels) { %>
                        <% spots.hotels.forEach(function(hotel){ %>
                              <% console.log(hotel.name) %>
                        <% }) %>
                  <% } %>
                  <hr>
                  <button class="btn btn-block btn-primary">SUBMIT!</button>
                  <a href="/packages">Go back!</a>      
            </div>
      </div>
   </div>
</form>
 

<% include ../partials/footer %>